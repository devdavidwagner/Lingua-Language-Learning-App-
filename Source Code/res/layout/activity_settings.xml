<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lingua.controllers.Settings"
    android:background="@drawable/gradient">

    <Button
        android:id="@+id/btnLogOut"

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:fontFamily="serif"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Log Out"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnMenu"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:layout_weight="2.69"
        android:background="@drawable/button"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="MENU"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="@color/hunterGrn"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:text="Settings"
        android:layout_alignBaseline="@+id/btnMenu"
        android:layout_alignBottom="@+id/btnMenu"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:fontFamily="serif"/>


    <Button
        android:id="@+id/btnPlayStore"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="PLAY STORE"
        android:background="@drawable/button"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_alignBottom="@+id/btnEmail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="serif"/>


    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/radioGroup"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/btnResetLvl"
        android:layout_alignLeft="@+id/btnResetLvl"
        android:layout_alignStart="@+id/btnResetLvl"
        android:fontFamily="serif">


        <RadioButton
            android:id="@+id/radioButtonSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Spanish"
            android:textSize="25sp"
            android:fontFamily="serif"

            />

        <RadioButton
            android:id="@+id/radioButtonFr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="French"
            android:textSize="25sp"
            android:fontFamily="serif"/>

        <RadioButton
            android:id="@+id/radioButtonDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            android:checked="false"
            android:text="German"
            android:textSize="25sp"
            android:fontFamily="serif"/>



    </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:textColor="@color/hunterGrn"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset A Language:"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/btnMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="serif"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:text="FEEDBACK:"
        android:textColor="@color/hunterGrn"
        android:textSize="20sp"
        android:fontFamily="serif"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guide to Learning Languages: "
        android:textColor="@color/hunterGrn"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:fontFamily="serif"
        android:layout_above="@+id/btnDownload"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnDownload"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="DOWNLOAD"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/btnLogOut"
        android:layout_alignLeft="@+id/btnEmail"
        android:layout_alignStart="@+id/btnEmail"
        android:fontFamily="serif"/>

    <Button
        android:id="@+id/btnEmail"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:shadowColor="#000000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_above="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"/>

    <Button
    android:id="@+id/btnResetLvl"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
        android:background="@drawable/button"
    android:shadowColor="#000000"
    android:shadowDx="0"
    android:shadowDy="0"
    android:shadowRadius="5"
        android:text="Reset"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/btnPlayStore"
        android:layout_alignLeft="@+id/btnEmail"
        android:layout_alignStart="@+id/btnEmail"
        android:fontFamily="serif"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnDownload"
        android:layout_toEndOf="@+id/textView9"
        android:background="@color/hunterGrn"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/textView9"
        android:fontFamily="serif"/>


</RelativeLayout>
